enum DoorType {
    Numbered
    Direction
    House
}

enum ReportType {
    Closed
    Abusive
    Mistake
}

model Building {
    fields {
        street Text
        number Number
        doors DoorType
        code Text?
        note Text?
    }
}

model Spot {
    fields {
        building Building
        floor Number?
        door Number?
        active Boolean @default(false)
        note Text?
        host User
        report Report[]
    }
}

model User {
    fields {
        identity Identity
        group Number @default(2)
    }
}

model Report {
    fields {
        reporter User
        target Spot
        note Text
        type ReportType
    }
}

model Message {
    fields {
        note Text
        sender User
        target Spot?
        recieve User
        spot Building
    }
}

model Announce {
    fields {
        note Text
        post Timestamp?
        spot Building
    }
}
